<h1><%= @band.name %></h1>

<h3>Album List</h3>
<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to album.title, album_url(album) %></li>
  <% end %>
</ul>

<%= link_to "View Complete Discography", band_albums_url(@band) %><br>

<%= link_to "Create New Album", new_band_album_url(@band) %> |
<%= link_to "Edit Band", edit_band_url(@band) %>

<%= button_to "Delete Band", band_url(@band), :method => :delete %>

<%= link_to "Back to Band List", bands_url %>