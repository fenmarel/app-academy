<h1>All Tags</h1>

<ul id="articles">
  <% @tags.each do |tag| %>
    <li><p>
      <%= link_to tag.name, tag_path(tag), class: 'tag_name' %>  |
      <%= link_to 'delete', tag_path(tag), method: :delete,
             data: { confirm: "Are you sure?" } %>
    </p></li>
  <% end %>
</ul>

</br>
<%= link_to 'Create New tag', new_tag_path, class: 'new_article' %>

</br>
<p><%= link_to "<< Back to Articles List", root_path %></p>