<h1>All Users</h1>

<ul id="user-list">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.username, user_url(user) %>
      <% if Friendship.can_friend?(current_user, user) %>
        <!-- button_to "Follow", user_friendships_url(user), class: "follow" -->
        <button class="follow" data-user_id="<%= user.id %>">Follow</button>
      <% end %>
    </li>
  <% end %>
</ul>